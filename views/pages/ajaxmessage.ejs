<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Ajax Message</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>

<body>
    <%- include('../partials/navbar') %> <!-- Include navbar partial -->

        <div class="container">
            <h1>Add guestbook entry (AJAX)</h1>
            <form id="ajaxForm">
                Username <input type="text" name="username" required>
                Country <input type="text" name="country" required>
                Message <input type="text" name="message" required>
                <input type="button" value="Submit" id="submitAjax">
            </form>

            <%- include('../partials/guestbooktable') %>
        </div>
        <%- include('../partials/footer') %>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
        <script>
            // Function to add a single message row to the table
            function addMessageToTable(item) {
                let table = document.getElementById("guestbooktable");
                let date = new Date(item.date);
                table.innerHTML += `<tr><td>${item.id}</td><td>${item.username}</td><td>${item.country}</td><td>${date.toLocaleString("fi-FI")}</td><td>${item.message}</td></tr>`;
            }

            document.getElementById("submitAjax").addEventListener("click", function () {
                const formData = {
                    username: document.querySelector('input[name="username"]').value,
                    country: document.querySelector('input[name="country"]').value,
                    message: document.querySelector('input[name="message"]').value,
                };

                fetch("/ajaxmessage", {
                    method: "POST",
                    headers: {
                        "Content-Type": "application/json",
                    },
                    body: JSON.stringify(formData),
                })
                    .then(response => response.json())
                    .then(data => {
                        // Now, just add the new message
                        addMessageToTable(data);
                    })
                    .then(() => {
                        // Clear the form
                        document.getElementById("ajaxForm").reset();
                    })
                    .catch(error => console.error("Error:", error));
            });
        </script>
</body>

</html>